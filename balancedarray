#include <iostream>

using namespace std;

int main() {
    int T;
    int *arr=NULL;
    cin>>T;
    while(T--)
    {
        int size;
        cin>>size;
        int sum1=0;
        int sum2=0;
        arr=new int[size];
        for(int i=0;i<size;i++){
        cin>>arr[i];
        }
        
        for(int i=0;i<size/2;i++){
            sum1+=arr[i];
        }
        
        for(int i=size/2;i<size;i++){
            sum2+=arr[i];
        }
        cout<<abs(sum1 - sum2) <<endl;
        delete [] arr; 
    }
	//code
	return 0;
}
